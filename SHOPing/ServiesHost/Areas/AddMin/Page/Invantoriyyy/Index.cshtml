@page
@model ServiceHost.Areas.Administration.Pages.Invantoriyyy.IndexModel
@{
}

@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت انبار";
}

<div class="row">
    <div class="col-sm-12">
        <h4 classs="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg"href="#shoemodal=@Url.Page("./Index","Create")">ایجاد محصول جدید</a>
        </p>

    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
             <div class="panel-heading">
                <h3 class="panel-title">انبار  محصولات</h3>
             </div>
            <div class="panel-body">
                     
            </div>
        </div>
     
</div>
<div class="row" id="">
    <div class=" col-md-12">
        <div class="panel panelbtn-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست انبار</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                             
                                    <th>تاریخ</th>
                               
                                    <th>قیمت</th>
                                    <th>موجودی</th>
                                 
                                    <th>محصول</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.invantoriyViewModels)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>
                                            <img src="@item.CurntCunt" style="width: 70px; height: 70px" />
                                        </td>
                                        <td>@item.CurntCunt</td>
                                        <td>@item.ProductId</td>
                                        <td>@item.ProductId</td>
                                        
                                        <td>@item.UnitPrice</td>   
                                        <td>
                                       
                                            <a class="btn btn-warning pull-right m-rl-5"href="#showmode"=@Url.Page("./Index","Edit",new{id=item.Id})>
                                                <i class="fa fa-edit"></i>ویرایش
                                            </a>
                                            <a class="btn btn-warning pull-right m-rl-5" href="#showmode" =@Url.Page("./Index","Increse",new{id=item.Id})>
                                                <i class="fa fa-Increse"></i>افزایش
                                            </a>
                                            <a class="btn btn-warning pull-right m-rl-5" href="#showmode" =@Url.Page("./Index","Reduce",new{id=item.Id})>
                                                <i class="fa fa-Reduce"></i>کاهش
                                            </a>
                                            <a class="btn btn-warning pull-right m-rl-5" href="#showmode" =@Url.Page("./Index","Log",new{id=item.Id})>
                                                <i class="fa fa-list-ol"></i>لیست
                                            </a>
                                  
                                    </tr>
                                }
                             
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables//dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $   ('#datatable').datatable();

        });

    </script>
}

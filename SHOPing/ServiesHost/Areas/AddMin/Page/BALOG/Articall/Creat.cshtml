@page
@model ServiesHost.Areas.AddMin.Page.BALOG.Articall.CreatModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "ایجاد مقاله جدید";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">ایجاد مقاله جدید</h3>
            </div>
            <div class="panel-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="command.Titel" class="control-label">نام</label>
                                <input type="text" class="form-control" asp-for="command.Titel" onchange="makeSlug('Title', 'Slug')">
                                <span asp-validation-for="command.Titel" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="command.Slug" class="control-label">اسلاگ</label>
                                <input type="text" class="form-control" asp-for="command.Slug">
                                <span asp-validation-for="command.Slug" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="command.PublisDate" class="control-label">تاریخ انتشار</label>
                                <input class="form-control persianDateInput" asp-for="command.PublisDate">
                                <span asp-validation-for="command.PublisDate" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="command.Picture" class="control-label">عکس</label>
                                <input type="file" class="form-control" asp-for="command.Picture" accept="image/*">
                                <span asp-validation-for="command.Picture" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="command.CategoryId">گروه مقاله</label>
                                <select class="form-control" asp-for="command.CategoryId" asp-items="Model.ArticalCategoriys">
                                    <option value="0">گروه مقاله ...</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="command.PictureAlt" class="control-label">Alt</label>
                                <input type="text" class="form-control" asp-for="command.PictureAlt">
                                <span asp-validation-for="command.PictureAlt" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="command.PictureTiTle" class="control-label">عنوان</label>
                                <input type="text" class="form-control" asp-for="command.PictureTiTle">
                                <span asp-validation-for="command.PictureTiTle" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group no-margin">
                                <label asp-for="command.ShortDescription" class="control-label">توضیحات کوتاه</label>
                                <textarea class="form-control autogrow" asp-for="command.ShortDescription" onchange="fillField('ShortDescription', 'MetaDescription')"
                                          style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                                <span asp-validation-for="command.ShortDescription" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group no-margin">
                                <label asp-for="command.Description" class="control-label">توضیحات</label>
                                <textarea class="form-control" id="BodyContent" asp-for="command.Description"></textarea>
                                <span asp-validation-for="command.Description" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="command.Kewords" class="control-label">کلمات کلیدی</label>
                                <input type="text" class="form-control" asp-for="command.Kewords">
                                <span asp-validation-for="command. Kewords" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group no-margin">
                                <label asp-for="command.MetaDescription" class="control-label">توضیحات متا</label>
                                <textarea class="form-control autogrow" asp-for="command.MetaDescription"
                                          style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                                <span asp-validation-for="command.MetaDescription" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="command.CanonicalAddras" class="control-label">CanonicalAddress</label>
                                <input type="text" class="form-control" asp-for="command.CanonicalAddras">
                                <span asp-validation-for="command. CanonicalAddras" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-b-5">ایجاد</button>
                    <a asp-page="./Index" class="btn btn-dark waves-effect waves-light m-b-5">بازگشت</a>
                </form>
            </div>
        </div>
    </div>
</div>